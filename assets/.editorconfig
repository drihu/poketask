# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,py}]
indent_size = 4

[{.eslintrc.json,composer.json}]
indent_size = 4

[Makefile, makefile]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false
